<Window x:Class="SmartWork.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartWork.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="gridContainer">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListBox>
            <Button x:Name="btnNewJob" Click="btnNewJob_Click"></Button>
            <Button x:Name="btnAllJobs" Click="btnAllJobs_Click"></Button>
        </ListBox>

        <Grid Grid.Column="1" x:Name="gridContent"></Grid>

    </Grid>
</Window>
